<h1>Danh sach student</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Status</th>
      <th>Sửa status</th>
    </tr>
  </thead>
  <tbody>
    <% listStudent.forEach((item, index) => { %>
    <tr>
      <td><%= index + 1 %></td>
      <td>
        <a href="/teacher/studentDetail/<%= item.id %>"
          ><%= item.User.name %></a
        >
      </td>
      <td><%= item.User.email %></td>
      <td><%= item.User.phone %></td>
      <td><%= item.User.address %></td>
      <td><%= item.learning_status.name %></td>
      <td>
        <a
          href="/teacher/student/updateStatus/<%= item.id %>"
          class="btn btn-warning"
          >Sửa status</a
        >
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
