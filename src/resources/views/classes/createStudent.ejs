<h4 style="text-align: center">
  Thêm học viên vào lớp học <%= classItem.name %>
</h4>
<% if(message?.length) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %> <% if(success?.length) { %>
<div class="alert alert-success"><%= success %></div>
<% } %>
<form action="" class="mb-2" method="post">
  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th width="5%">STT</th>
        <th>Tên</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Thêm học viên</th>
      </tr>
    </thead>
    <tbody>
      <% listUser.forEach((user, index) => { %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td>
          <input class="checkboxItem" name="studentId" type="checkbox"
          value="<%= user.id %>" <%= studentIds.includes(+user.id) ? "checked" :
          "" %>/>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <button class="btn btn-success">Thêm</button>
  <a href="/admin/classList" class="btn btn-danger">Hủy</a>
</form>

