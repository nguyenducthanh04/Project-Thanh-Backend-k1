<style>
  h2 {
    font-size: 1.4rem;
  }
  .excersise {
    font-size: 1.5rem;
    color: blue;
  }
</style>
<% excersiseList.forEach((item) => { %>
<div>
  <h1 class="excersise">Bài tập về nhà</h1>
  <h2><%= item.title %></h2>
  <p><%= item.content %></p>
  <a href="<%= item.attachment %>"><%= item.attachment %></a>
</div>
<form action="" method="post" class="mt-4">
  <textarea
    name="comments"
    placeholder="Comment"
    style="width: 300px; height: 40px"
  ></textarea
  ><br />
  <button class="btn btn-primary" style="margin-left: 210px">Comment</button>
</form>
<hr />
<% }) %>
