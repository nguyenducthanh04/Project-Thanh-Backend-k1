<h4>Edit Document</h4>
<% if(message?.length) { %>
<div class="alert alert-danger"><%= message %></div>
<% } %> <% if(success?.length) { %>
<div class="alert alert-success"><%= success %></div>
<% } %>
<form action="" method="post">
  <div class="mb-3">
    <label for="">Tên Module</label>
    <input
      type="text"
      name="name"
      class="form-control"
      placeholder="Tên module..."
      value="<%= Modules.name %>"
    />
  </div>
  <% Modules.module_documents.forEach((item) => { %>
  <div class="mb-3">
    <label for="">Link tài liệu</label>
    <input
      type="text"
      name="pathName"
      class="form-control"
      placeholder="Link tài liệu..."
      value="<%= item.pathName %>"
    />
  </div>
  <% }) %>
  <div class="d-grid">
    <button class="btn btn-success">Lưu</button>
    <a href="/admin/courseList" class="btn btn-danger">Huỷ</a>
  </div>
</form>
