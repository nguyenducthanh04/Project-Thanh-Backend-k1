<h2>Phân quyền</h2>
<a href="/admin/users/roles" class="btn btn-warning">Quản lý Roles</a>
<form action="" method="post" class="mt-4">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th width="10%">
          <input type="checkbox" />
        </th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% roleList.forEach(({id, name}) => { %>
      <tr>
        <td>
          <input type="checkbox" name="roles" value="<%= id %>" <%=
          isRole(user.roles, id) ? 'checked': '' %> />
        </td>
        <td><%= name %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <button type="submit" class="btn btn-success">Lưu thay đổi</button>
  <a href="/admin/teacherList" class="btn btn-danger">Trở về</a>
</form>
